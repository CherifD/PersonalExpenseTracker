<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/img_cat_expense_item"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_money_24dp"
        android:contentDescription="@string/money_related_image"
        app:layout_constraintEnd_toStartOf="@+id/tv_business_name_cat_expense_item"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_business_name_cat_expense_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_cat_expense_item"
        app:layout_constraintEnd_toStartOf="@+id/tv_amount_cat_expense_item"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="6"
        app:layout_constraintStart_toEndOf="@+id/img_cat_expense_item"
        app:layout_constraintTop_toTopOf="@+id/img_cat_expense_item" />

    <TextView
        android:id="@+id/tv_amount_cat_expense_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_business_name_cat_expense_item"
        app:layout_constraintEnd_toStartOf="@+id/tv_unit_cat_expense_item"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="2.5"
        app:layout_constraintStart_toEndOf="@+id/tv_business_name_cat_expense_item"
        app:layout_constraintTop_toTopOf="@+id/tv_business_name_cat_expense_item"
       />

    <TextView
        android:id="@+id/tv_unit_cat_expense_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="4dp"
        android:paddingEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_amount_cat_expense_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="2.5"
        app:layout_constraintStart_toEndOf="@+id/tv_amount_cat_expense_item"
        app:layout_constraintTop_toTopOf="@+id/tv_amount_cat_expense_item"
        android:text="@string/unit"
        />

    <TextView
        android:id="@+id/tv_date_cat_expense_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/tv_business_name_cat_expense_item"
        app:layout_constraintTop_toBottomOf="@+id/tv_business_name_cat_expense_item"
        />

</android.support.constraint.ConstraintLayout>